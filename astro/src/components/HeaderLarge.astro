---
import {Image} from 'astro:assets';
import localJlo from '../images/profile-pic.jpg'
---

<header class="top-nav">
  <h1>
    <a href="/">J<span class="special-char">Î»</span>O</a>
  </h1>
  <div class="hero-image">
    <Image src={localJlo} alt="Jean-Louis Leysens" loading="eager" />
  </div>
</header>

<style>
  .special-char {
    font-family: sans-serif;
  }
  h1 {
    font-size: 3rem;
    margin-top: 0,
    margin-bottom: 0,
  }
  header {
    font-family: 'Fira Mono', monospace;
    /* max-height: 5rem; */
    padding-top: 5rem;
    border-bottom: 1px solid grey;
    background: linear-gradient(45deg, var(--a-dark), var(--c-dark-cold-grey), var(--a-cold));
    display: grid;
    place-content: center;
    row-gap: 1rem;
    & a {
      color: var(--text-reverse);
      text-decoration: none;
    }
  }
  .hero-image {
    display: grid;
    place-content: center;
    img {
      --image-size: 5rem;
      width: var(--image-size);
      aspect-ratio: 1 / 1;
      border-radius: 100%;
      object-fit: cover;
      margin-bottom: calc(-1 * var(--image-size) / 2);
    }
  }
</style>